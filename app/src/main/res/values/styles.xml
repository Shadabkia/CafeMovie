<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttonBorderColorStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="paddingStart">@dimen/padding_tiny</item>
        <item name="paddingEnd">@dimen/padding_tiny</item>
        <item name="android:ellipsize">end</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/padding_x_middle</item>
        <item name="android:paddingBottom">@dimen/padding_x_middle</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/blue_1</item>
    </style>

    <!-- =================== progressBarr =================== -->


    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/dark_gray</item>
    </style>

    <!-- =================== TextViews =================== -->

    <!-- in Figma: 12 Regular -->
    <style name="textRegular12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>


    <!-- in Figma: 18 Bold -->
    <style name="textTitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!-- in Figma: 18 semi_bold -->
    <style name="textTitle1SemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!-- in Figma: 16 Bold -->
    <style name="textTitle2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_x_medium</item>

    </style>

    <!-- in Figma: 14 Semi_bold -->
    <style name="textOption14SemiBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

</resources>